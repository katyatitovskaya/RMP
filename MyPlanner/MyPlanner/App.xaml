<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyPlanner"
             x:Class="MyPlanner.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Color x:Key="BackgroundColor">#ADD8E6</Color>
                    <Color x:Key="ButtonBackgroundColor">#191970</Color>
                    <Color x:Key="ButtonTextColor">#FFFAFA</Color>
                    <Color x:Key="TextColor">#000000</Color>
                    <x:Double x:Key="BiggerFontSize">20</x:Double>
                    <x:Double x:Key="SmallerFontSize">16</x:Double>
                    <x:String x:Key="FontFamily">Arial</x:String>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
